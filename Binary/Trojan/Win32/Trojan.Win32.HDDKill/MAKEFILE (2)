NAME = VXXXD

!ifdef DEBUG
DDEBUG  =-DDEBLEVEL=1 -DDEBUG
!else
DDEBUG  =-DDEBLEVEL=0
!endif

ASM    = ml
AFLAGS = -coff -DBLD_COFF -DIS_32 -W2 -c -Cx -Zm -DMASM6 $(DDEBUG) -Ic:\watcom\winddk\inc32
ASMENV = ML
LFLAGS = /VXD /NOD

OBJS = VXXXD.OBJ

.ASM.OBJ:
        set $(ASMENV)=$(AFLAGS)
        $(ASM) -Fo$*.OBJ $< 

$(NAME).VXD: $(NAME).DEF $(OBJS)
        .\link $(LFLAGS) /OUT:$(NAME).VXD /MAP:$(NAME).MAP /DEF:$(NAME).DEF $(OBJS)
